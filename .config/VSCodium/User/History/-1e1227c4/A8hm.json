{
  "security.workspace.trust.untrustedFiles": "open",
  "editor.mouseWheelZoom": true,
  "explorer.confirmDelete": false,
  "background.enabled": false,
  "background.useDefault": false,
  //"background.customImages": ["https://w.wallhaven.cc/full/yx/wallhaven-yxe85x.jpg"],
  "background.fullscreen": {
      "image": "https://w.wallhaven.cc/full/l8/wallhaven-l8wzr2.png", // url of your image
      // "image": ["https://pathtoimage.png"], // An array may be useful when set interval for carousel
      "opacity": 0.92, // 0.85 ~ 0.95 recommended
      "size": "cover", // also css, `cover` to self-adaption (recommended)，or `contain`、`200px 200px`
      "position": "center", // alias to `background-position`, default `center`
      "interval": 0 // seconds of interval for carousel, default `0` to disabled.
    },
    "workbench.colorTheme": "Bearded Theme Black & Amethyst",
    "editor.fontFamily": "'JetbrainsMonoNL Nerd Font Regular', 'monospace', monospace",
    "background.useFront": false,
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    
}
